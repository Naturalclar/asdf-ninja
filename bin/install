set -eo pipefail

function fail() {
  echo -e "\e[31mFail:\e[m $* ðŸ˜­"
  exit 1
}

function install_ninja() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local platform

  case "$OSTYPE" in
    darwin*) platform="mac" ;;
    linux*) platform="linux" ;;
    *) fail "Unsupported platform" ;;
  esac

  local download_url="https://github.com/ninja-build/ninja/releases/download/v${version}/ninja-${platform}.zip"

  (
    echo "âˆ— Downloading and installing ninja..."
    curl --silent --location --create-dirs --output "${install_path}/bin/ninja.zip" "$download_url" || fail "Could not download ninja $version"
    unzip "${install_path}/bin/ninja.zip" -d "${install_path}/bin" >/dev/null || fail "Could not uncompress"
    chmod +x "${install_path}/bin/ninja" || fail "Could not find uncompressed ninja binary"
    rm "${install_path}/bin/ninja.zip" || fail "Could not remove zip file"
    echo "The installation was successful!"
  ) ||
    (
      rm -rf "$install_path"
      fail "An error occurred"
    )
}

install_ninja "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
